{
  "manifest_version": 3,
  "name": "Notification Popup Extension",
  "version": "1.0",
  "description": "Automatically shows a popup when the user clicks on the notification button.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://impelsys.darwinbox.in/*"],
      "js": ["content.js"]
    }
  ]
}
